<div class="col-md-3">
	<% if user.picture != nil %>
		<div class="card user-card" style="background-image: linear-gradient(135deg, rgba(241, 233, 232, 0.2), rgba(115, 112, 112, 0.4)), url('<%= cl_image_path user.picture.path %>');", class: 	"img-responsive">
			<%= link_to "", user_path(user), class: "card-link" %>
		</div>
		<div class="">
			<p style="font-size:12px; color:#1e4358;padding-top:10px; font-weight:bold; margin-bottom:5px;"><%= user.first_name.upcase %>  <%= user.last_name.upcase %></p>
			
		</div>			
	<% end %>				
</div>