<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2>Modifier mon profil </h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <div class="row">
            <label class="col-md-4">Pr√©nom</label>
            <div class="col-md-8">
              <%= f.input :first_name, required: true, autofocus: true, label: false %>
            </div>
          </div>
          <div class="row">
            <label class="col-md-4">Nom</label>
            <div class="col-md-8">
              <%= f.input :last_name, required: true, autofocus: true, label: false %>
            </div>
          </div>
          <div class="row">
            <label class="col-md-4">Adresse Mail</label>
            <div class="col-md-8">
              <%= f.input :email, required: true, autofocus: true, label: false %>
            </div>
          </div>
          <div class="row">
            <label class="col-md-6">Etes-vous Agent Immobilier ?</label>
            <div class="col-md-6">
              <%= f.input :is_realestate, required: true, autofocus: true, label: false %>
            </div>
          </div>
          <div class="row">
            <label class="col-md-4">Description</label>
            <div class="col-md-8">
              <%= f.input :description, required: true, autofocus: true, label: false %>
            </div>
          </div>
          

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
          <div class="row">
            <label class="col-md-4">Mot de Passe</label>
            <div class="col-md-8">
              <%= f.input :password, autocomplete: "off", hint: "Le laisser vide si vous ne souhaitez pas changer", required: false, label: false %>
            </div>
          </div>

          <div class="row">
            <label class="col-md-4">Confirmation Mot de Passe</label>
            <div class="col-md-8">
              <%= f.input :password_confirmation, autocomplete: "off", hint: "Le laisser vide si vous ne souhaitez pas changer", required: false, label: false %>
            </div>
          </div>
          
          
          <%= f.input :picture, as: :attachinary %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Update" %>
        </div>
      <% end %>

      <h3>Cancel my account</h3>

      <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

      <%= link_to "Back", :back %>
    </div>
  </div>
</div>
